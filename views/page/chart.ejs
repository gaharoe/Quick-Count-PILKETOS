<div class="h-screen w-screen flex">
    <canvas id="myChart" class="h-full w-full"></canvas>
    <div class="h-full bg-teal-500 flex-1 flex justify-center items-center">
        <div class="w-[100px] h-[200px] flex justify-center align-center">paslon 1</div>
        <div>paslon 2</div>
        <div>paslon 3</div>
    </div>
</div>
<script src="/scripts/chart.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
    const ctx = document.getElementById('myChart');
    const socket = io();
    socket.on('connection', () => {
        alert('connected');
    });
    const chart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Paslon 1', 'Paslon 2', 'Paslon 3'],
            datasets: [{
                label: '# of Votes',
                data: [0, 0, 0],
                borderWidth: 2
            }
            ]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            responsive: true,
            maintainAspectRatio: true
        }
    });
    // chart.data.datasets[0].data = [5, 5, 5];
    socket.on('updateChart', (data) => {
        console.log(data);
        chart.data.datasets[0].data = [data[0], data[1], data[2]];
        chart.update();
    });
</script>